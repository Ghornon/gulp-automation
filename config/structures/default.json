{
	
	"paths": {
		
		"input": {
			
			"js": "src/js",
			"css": "src/css",
			"img": "src/img",
			"html": "/"
			
		},

		"output": {
			
			"js": "dist/js",
			"css": "dist/css",
			"img": "dist/img",
			"html": "/"
			
		}
		
	}, 
	
	"files": {
		
		"js": [
			"*.js", 
			"!_*.js"
		],
		
		"css": [
			"*.scss", 
			"!_*.scss"
		],
		
		"img": [
			"*.png", 
			"*.jpg", 
			"*.jpeg", 
			"*.gif"
		],
		
		"html": [
			"**/*.html",
			"**/*.php"
		]
		
	},
		
	"bundle": {

		"js": "bundle.js",
		"css": "bundle.css",
		"img": null,
		"html": "index.html"
		
	}
		
}

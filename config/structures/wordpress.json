{
	
	"paths": {
		
		"input": {
			
			"js": "src/js",
			"css": "src/css",
			"img": "src/img",
			"html": "/"
			
		},

		"output": {
			
			"js": "assets",
			"css": "assets",
			"img": "assets/img",
			"html": "/"
			
		}
		
	}, 
	
	"files": {
		
		"js": [
			"*.js", 
			"!_*.js"
		],
		
		"css": [
			"*.css",
			"!_*.css",
			"*.scss", 
			"!_*.scss"
		],
		
		"img": [
			"*.png", 
			"*.jpg", 
			"*.jpeg", 
			"*.gif"
		],
				
		"html": [
			"**/*.html",
			"**/*.php"
		]
			
	},
	
	"bundle": {

		"js": "bundle.js",
		"css": "index.css",
		"img": null,
		"html": "index.php"

	}

}